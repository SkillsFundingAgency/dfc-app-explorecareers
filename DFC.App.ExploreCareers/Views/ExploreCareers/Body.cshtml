@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration


<div class="govuk-width-container">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="dfc-app-pages-alignment-left">
                <section class="govuk-!-margin-top-5">
                <div class="govuk-grid-row govuk-grid-row-extra">
                        <div class="govuk-grid-column-two-thirds">
                            <div class="dfe-grid-container">
                                <div class="dfe-card sector-landing-image">
                                    <img class="imag-explore-career" src="@Configuration["AssetsCdn"]nationalcareers_toolkit/images/explore-career-home.jpg" alt="explore career Image" />

                                    <div class="dfe-card-container">
                                        <div class="govuk-!-margin-top-5">
                                            <p class="govuk-body">
                                                Choose a way to explore careers for each job profile, 
                                                you'll find qualifications needed, salary, 
                                                prgression opportunities and a description of daily tasks involved.
                                            </p>
                                        </div>
                                    </div>


                                    <div class="govuk-grid-row govuk-grid-row-card govuk-grid-row-sector-landing">
                                        <div class="dfe-card-expolore-career-sector-landing dfe-ec-landing-card govuk-!-margin-top-2">
                                            <div class="dfe-card dfe-card-expolore-career dfe-card-container-sector-landing dfe-card_explorer">
                                                <div class="dfe-card-container">
                                                    <h3 class="dfc-code-search-jpTitle ">
                                                        <a class="dfc-code-search-jpTitle dfc-code-search-jpTitle-extra dfc-code-ancher-underline" href="/explore-careers/job-sector">
                                                            Explore by sector
                                                        </a>
                                                    </h3>

                                                    <p class="govuk-body dfc-code-search-jpTitle-extra">
                                                            Find out what each sector involves and discover the types of jobs you'll find in each sector.
                                                        </p>
                                                    </div>
                                            </div>
                                        </div>
                                        <div class="dfe-card-expolore-career-sector-landing dfe-ec-landing-card  govuk-!-margin-top-2">
                                            <div class="dfe-card dfe-card-expolore-career dfe-card-container-sector-landing dfe-card_explorer">
                                                <div class="dfe-card-container">
                                            <h3 class="dfc-code-search-jpTitle"><a class="dfc-code-search-jpTitle dfc-code-search-jpTitle-extra dfc-code-ancher-underline" href="/explore-careers/all-careers">Filter by category</a></h3>

                                                    <p class="govuk-body dfc-code-search-jpTitle-extra">
                                                       Filter all job profiles by category. Apply filters to view all careers in those categories.
                                                    </p>

                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>
                        <div class="govuk-grid-column-one-third">
                            <h3><a class="class="govuk-header__link" href="/skills-assessment">Take a skills assessment</a></h3>
                            <p class="govuk-body">
                                If you're not sure where to start, answer questions 
                                about your interest to find out which sectors may be best for you.
                            </p>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <partial name="~/Views/Shared/_SpeakToAnAdvisor.cshtml" />
</div>


