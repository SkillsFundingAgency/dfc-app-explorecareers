        </div>
        <div class="govuk-grid-column-one-half">
            <p class="govuk-body">
                @Html.Raw(@Model.SectorLandingPage[0].RealStoryImageDescription.Html)
            </p>
        </div>
    </div>

    <div class="govuk-grid-row">
        <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">Explore all sectors</h1>
            <p class="govuk-body">
                If you're not sure that this is the right sector for you, you can <span><a href="#">explore all sectors</a></span> and discover what each sector has to offer.
            </p>
        </div>
    </div>

    <div class="govuk-grid-row">
        <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">
    </div>

