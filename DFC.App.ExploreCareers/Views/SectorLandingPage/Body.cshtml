<div class='govuk-width-container'>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
           @Html.Raw(@Model.SectorLandingPage[0].Description.Html)
        </div>
        <div class="govuk-grid-column-one-half">
            <img src="@Configuration["AssetsCdn"]media/@Html.Raw(@Model.SectorLandingPage[0].VideoImage.Paths[0])" alt="" />
            <p class="govuk-body">
                @Model.SectorLandingPage[0].VideoDuration
            </p>
            <span><a href="#">@Model.SectorLandingPage[0].VideoTranscript</a></span>.
        </div>
    </div>

    <div class="govuk-grid-row">
        <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">
    </div>

    <div class="govuk-grid-row">

        @Html.Raw(@Model.SectorLandingPage[0].ProfileDescription.Html)

