    <div class="govuk-grid-row">
        <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">Further inspiration</h1>
            <p class="govuk-body">
              still to add in CMS
            </p>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="dfe-grid-container dfe-grid-container-explore-career">
            @foreach (var item in Model.SectorLandingPage[0].JobProfileInspiration.ContentItems)
            {
                <div class="dfe-card dfe-card-explore-career">
                    <div class="dfe-card-container">
                        <!-- Display job title -->
                        <h2 class="govuk-heading-m">@item.DisplayText</h2>
                        <!-- Display job overview -->
                        <p>@item.Overview</p>
                        <!-- Display salary range -->
                        <p>Salary: @item.SalaryStarterPerYear.ToString("C0") to @item.SalaryExperiencedPerYear.ToString("C0")</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            @Html.Raw(@Model.SectorLandingPage[0].JobProfileInspirationDescription.Html)
        </div>
    </div>

    <div class="govuk-grid-row">
        <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
            @Html.Raw(@Model.SectorLandingPage[0].RealStoryDescription.Html)
