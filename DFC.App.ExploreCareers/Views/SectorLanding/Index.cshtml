@model List<DFC.App.ExploreCareers.ViewModels.SectorLandingPage.SectorLandingPage>
@{
    Layout = "_LocalLayout";
    ViewData["Title"] = "Sector Landing Page";
}
<main class="govuk-!-padding-top-0 govuk-!-padding-bottom-0" id="main-content" role="main">

    <div class="govuk-width-container">
        <div id="compuiShell-ErrorSummary" class="govuk-error-summary dfc-composite-shell-hide" aria-labelledby="compuiShell-error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
            <h2 class="govuk-error-summary__title" id="compuiShell-error-summary-title">
                Sector landing page
            </h2>
            <div class="govuk-error-summary__body">
                <ul class="govuk-list govuk-error-summary__list">
                </ul>
            </div>
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-width-container">
            <ul>
                @{
                    if (Model.Count() > 0)
                    {
                        foreach (var obj in Model)
                        {
                            <li>
                                <a asp-controller="sector-landing-page" asp-action="DetailsPage" asp-route-pageUrl="@obj.PageLocation.FullUrl"> @obj.AboutThisSector</a>
                            </li>
                        }
                    }
                }
            </ul>
        </div>
    </div>
</main>

